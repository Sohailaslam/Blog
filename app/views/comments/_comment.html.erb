<div id="comment<%= comment.id %>" class="mb-3">
    <p class="font-weight-bold mb-0"><%= comment.user.username %>
    </p>
    <p class="mb-0"><%= comment.body %> </p>
    <small><%= time_ago_in_words(comment.created_at)%> ago</small>
    <% if can? :update, comment %>
    | <%= link_to "Edit", edit_comment_path(comment), remote: true, class:'badge badge-info' %>
    <% end %>
    <% if can? :destroy, comment %>
    | <%= link_to "Delete", comment, method: :delete, data: {confirm: 'Are You Sure?'}, remote: true, class:'badge badge-danger' %>
    <% end %>

</div>