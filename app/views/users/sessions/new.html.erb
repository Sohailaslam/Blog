<div class="container mt-5">
  <div class="col-lg-5 mx-auto">
    <div class="sign-header">
      <h3 class="grey-color text-center">Log in</h3>
    </div>
    <div class="sign-in-bg">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <label class="grey-color">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Enter Email", class:"form-control mb-3"%>
        <label class="grey-color">Password</label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Enter password", class:"form-control mb-3"%>
        <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:' ' %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class:'float-right' %>
          <% end -%>
        </div>
  <% end -%>
  <div class="actions">
    <center><%= f.submit "Log in", class:'btn btn-primary btn-block my-2' %></center>
  </div>
<% end %>
<hr>
<center>
  <span>Not a Member yet?</span>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
    <% end -%>
</center>
</div>
</div>
</div>