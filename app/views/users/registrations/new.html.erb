<div class="container mt-5">
  <div class="col-lg-6 mx-auto">
    <div class="sign-header">
      <h3 class="grey-color text-center">Sign up</h3>
    </div>
  <div class="sign-in-bg">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
          <label class="grey-color">User Name</label>
          <%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"Enter User Name", class:'form-control mb-3' %>

        <div class="field">
          <label class="grey-color">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Enter Email", class:"form-control mb-3" %>
        </div>
        
        <div class="field">
         <label class="grey-color">Bio</label>
          <%= f.text_area :bio, autofocus: true, autocomplete: "bio", placeholder:'Description', class:'form-control mb-3' %>
        </div>
        
        <div class="field">
          <label class="grey-color">Passowrd</label>
          <% if @minimum_password_length %>
          <em class="grey-color">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Passowrd (6 characters minimum) ', class: 'form-control mb-3' %>
        </div>
      
        <div class="field">
          <label class="grey-color">Password Confirmation</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control mb-4' %>
        </div>
      
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-block my-2' %>
        </div>
      <% end %>
       <hr>
       <center>Already a Member?
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %><br />
            <% end -%>
        </center>
</div>
</div>
</div>